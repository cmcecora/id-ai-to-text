# Application Configuration
NODE_ENV=development
PORT=8000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./storage/app/uploads

# Anthropic API Configuration
ANTHROPIC_API_KEY=demo_key_only

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/id_ocr_db
MONGODB_DATABASE=id_ocr_db

# Authentication (Laravel Passport style)
API_SECRET_KEY=demo_secret_key_only
JWT_SECRET=demo_jwt_secret_only

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (for job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_CHANNEL=daily